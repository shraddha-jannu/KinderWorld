<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Colors"
    android:id="@+id/col_page"
    android:background="@drawable/background1"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/thebilliemonllydemosans"
        android:text="Learn Colors"
        android:textSize="45sp"
        android:background="#FFD600"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/head"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/grid">

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#1E3DE9"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_blue"
        android:layout_marginRight="30dp"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FFD600"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_yellow"
        android:layout_marginRight="30dp"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#D50000"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_red"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#C51162"
        android:layout_below="@+id/head"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_pink"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#000000"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_black"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#60DB11"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_green"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FF6D00"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_orange"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#C0B4B1"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_gray"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_background"
        android:layout_marginTop="40dp"
        android:backgroundTint="#A32506"
        android:id="@+id/btn_brown"
        />
    </GridLayout>

</RelativeLayout>